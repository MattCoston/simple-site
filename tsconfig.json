{
    "compilerOptions": {
        "esModuleInterop": true,
        "module": "commonjs",
        "removeComments": true,
        "skipLibCheck": true,
        "experimentalDecorators": true,
        "strict": true,
        "strictPropertyInitialization": false,
        "target": "es2017",
        "noUnusedLocals": true
    },
    "include": ["server/**/*"],
    "exclude": ["node_modules"]
}
