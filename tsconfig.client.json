{
    "compilerOptions": {
        "esModuleInterop": true,
        "lib": ["es2015", "dom"],
        "module": "commonjs",
        "removeComments": true,
        "skipLibCheck": true,
        "experimentalDecorators": true,
        "strict": true,
        "strictPropertyInitialization": false,
        "target": "es5",
        "noUnusedLocals": true,
        "rootDir": "./ts",
        "outDir": "./public/js"
    },
    "include": ["ts/**/*", "server/models/models.d.ts"],
    "exclude": ["node_modules"]
}
